@model IEnumerable<PBMS_beta3A.Model.ListaDaManutencao>

@{
    ViewBag.Title = "IndexListaManutencao";
}

<!-----------------------------------------------------My Javascript-------------------------------------------------------------------->

<script type="text/javascript">

    function testarBotaoa() {
        var get = document.getElementById("MovieType");
        var estado = get.options[get.selectedIndex].value;

        alert("valor selecionado foi: " + "  " + estado);
    }

</script>


<script type="text/javascript">

    function ProximasManutencoesParaoClienteX() {

        var get = document.getElementById("MovieType");
        var client_id = get.options[get.selectedIndex].value;

        $.ajax({
            type: 'GET', url: '/ListaDaManutencao/ProximaManutencaoParaoClienteX',
            dataType: 'html',
            cache: false,
            async: true,
            data: { id: client_id },
            success: function (data)
            { $('#ResultadoDaPesquisa').html(data); }
        });
    }
   
</script>

